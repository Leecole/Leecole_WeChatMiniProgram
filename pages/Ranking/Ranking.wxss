/* pages/Ranking/Ranking.wxss */
swiper{
  width: 100%;
  height:400rpx;
}

swiper image{
  width:100%;
  height:100%;
}

.background{
  width:100%;
  height: 100%;
  margin-top: 0rpx;
  position: fixed;
  z-index:-1;
}


.rankingDetail{
  display: flex;
  padding-top: 20rpx;
  border-bottom: 1rpx solid #eee;
  height:110rpx;
}

.number{
  margin-left: 20rpx;
  line-height: 90rpx;
}

.rankingDetail image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-left: 40rpx;
}
.content{
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-left: 30rpx;
}

.program_name{
  font-size: 32rpx;
  color:#000;
  padding-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.program_desc{
  font-size: 28rpx;
  color:#333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.program_startCount{
  color: red;
  line-height: 90rpx;
}
