/* pages/contact-us/contact-us.wxss */
.contactUS_container{
  width: 100%;
  height:100%;
}

.contactUS_container .background{
  width:100%;
  height: 500rpx;
  margin-bottom: 20rpx;
}

.panel1{
  display: flex;
   flex-direction: column;
}

.panel1 .title{
  padding-left: 40%;
  padding-bottom: 20rpx;
  font-family: '楷体';
  font-size: 30rpx; 
  border-bottom:2rpx solid #eee;
}
.panel1 .introduction{
  text-align: left;
  text-indent:2em;
  font-size: 28rpx;
  font-family: '楷体';
  margin: 30rpx 0rpx;
  padding-bottom: 40rpx;
  border-bottom: 10rpx solid #eee;
}

.panel2{
  display: flex;
  flex-direction: column;
}

.panel2 .contact{
  padding-left: 40%;
  padding-bottom: 20rpx;
  font-family: '楷体';
  font-size: 30rpx; 
  border-bottom:2rpx solid #eee;
}
.panel2 .WeChat{
  text-align: left;
  text-indent:2em;
  font-size: 22rpx;
  font-family: '微软雅黑';
  padding-left: 25%;
  padding-top:40rpx;
  padding-bottom: 20rpx;
  margin: 30rpx 0rpx;
}
.panel2 button{
  width:320rpx;
  height:60rpx;
  line-height: 60rpx;
  border: none;
  border-radius: 40rpx;
  background: #F78181;
  color:white;
  font-size: 26rpx;
  font-family: '楷体';
}



